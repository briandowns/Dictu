/**
 * split.du
 *
 * Testing the str.split() method
 *
 * .split() returns a list of substrings split by a given delimiter
 */
from UnitTest import UnitTest;

class TestStringSplit < UnitTest {
    testStringSplit() {
        this.assertEquals("Camus is great!".split(" "), ["Camus", "is", "great!"]);
        this.assertEquals("Camus,is,great!".split(","), ["Camus", "is", "great!"]);
        this.assertEquals("Camus--is--great!".split("--"), ["Camus", "is", "great!"]);
        this.assertEquals("Camus<spacer>is<spacer>great!".split("<spacer>"), ["Camus", "is", "great!"]);
        this.assertEquals("Camus is great!".split(","), ["Camus is great!"]);
        this.assertEquals("Camus is great!".split("12345"), ["Camus is great!"]);
        this.assertEquals("Camus is great!".split("!@Â£$%^"), ["Camus is great!"]);
        this.assertEquals("Camus is great!".split(""), ["D", "i", "c", "t", "u", " ", "i", "s", " ", "g", "r", "e", "a", "t", "!"]);
    }
    
    testStringSplitOptional() {
        this.assertEquals("Camus is great!".split(" ", -2), ["Camus", "is", "great!"]);
        this.assertEquals("Camus is great!".split(" ", -1), ["Camus", "is", "great!"]);
        this.assertEquals("Camus is great!".split(" ", 0), ["Camus is great!"]);
        this.assertEquals("Camus is great!".split(" ", 1), ["Camus", "is great!"]);
        this.assertEquals("Camus is great!".split(" ", 2), ["Camus", "is", "great!"]);
        this.assertEquals("Camus is great!".split(" ", 3), ["Camus", "is", "great!"]);
        this.assertEquals("Camus is great!".split(" ", 4), ["Camus", "is", "great!"]);
    }
    
    testStringSplitOptionalSinglular() {
        this.assertEquals("Camus is great!".split("", -2), ["D", "i", "c", "t", "u", " ", "i", "s", " ", "g", "r", "e", "a", "t", "!"]);
        this.assertEquals("Camus is great!".split("", -1), ["D", "i", "c", "t", "u", " ", "i", "s", " ", "g", "r", "e", "a", "t", "!"]);
        this.assertEquals("Camus is great!".split("", 0), ["Camus is great!"]);
        this.assertEquals("Camus is great!".split("", 1), ["D", "ictu is great!"]);
        this.assertEquals("Camus is great!".split("", 2), ["D", "i", "ctu is great!"]);
        this.assertEquals("Camus is great!".split("", 3), ["D", "i", "c", "tu is great!"]);
        this.assertEquals("Camus is great!".split("", 4), ["D", "i", "c", "t", "u is great!"]);
    }
}

TestStringSplit().run();