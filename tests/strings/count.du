/**
 * count.du
 *
 * Testing the str.count() method
 *
 * .count() returns the amount of occurrences of a substring
 */
from UnitTest import UnitTest;

class TestStringCount < UnitTest {
    testStringCount() {
        this.assertEquals("Camus is great!".count("D"), 1);
        this.assertEquals("Camus is great!".count("Camus"), 1);
        this.assertEquals("Camus is great! Camus is great!".count("Camus is great!"), 2);
        this.assertEquals("Camus is great! Camus is great!".count("test"), 0);
        this.assertEquals("Camus is great! Camus is great!".count("1234"), 0);
        this.assertEquals("Camus is great! Camus is great!".count("!"), 2);
    }
}

TestStringCount().run();