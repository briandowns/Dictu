/**
 * contains.du
 *
 * Testing the str.contains() method
 *
 * .contains() returns a boolean depending on whether a substring exists
 */
from UnitTest import UnitTest;

class TestStringContains < UnitTest {
    testStringContains() {
        this.assertTruthy("Camus is great!".contains("is"));
        this.assertFalsey("Camus is great!".contains("test"));
        this.assertFalsey("Camus is great!".contains("12345"));
        this.assertFalsey("Camus is great!".contains("@Â£$%"));
        this.assertTruthy("Camus is great!".contains("!"));
        this.assertTruthy("1Camus is great!1".contains("1"));
        this.assertTruthy(("1Camus " + "is great!").contains("1"));
    }
}

TestStringContains().run();