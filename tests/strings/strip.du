/**
 * strip.du
 *
 * Testing the str.leftStrip() method
 * Testing the str.rightStrip() method
 * Testing the str.strip() method
 *
 * .(left/right)strip() returns a new string with whitespace characters removed from the start, end, or both of a string
 */
from UnitTest import UnitTest;

class TestStringStrip < UnitTest {
    testStringLeftStrip() {
        this.assertEquals("  Camus is great!".leftStrip(), "Camus is great!");
        this.assertEquals("Camus is great!  ".leftStrip(), "Camus is great!  ");
        this.assertEquals("  Camus is great!  ".leftStrip(), "Camus is great!  ");
        this.assertEquals("  Camus is great!".leftStrip().len(), 15);
        this.assertEquals("Camus is great!  ".leftStrip().len(), 17);
        this.assertEquals("  Camus is great!  ".leftStrip().len(), 17);
    }

    testStringRightStrip() {
        this.assertEquals("Camus is great!  ".rightStrip(), "Camus is great!");
        this.assertEquals("  Camus is great!".rightStrip(), "  Camus is great!");
        this.assertEquals("  Camus is great!  ".rightStrip(), "  Camus is great!");
        this.assertEquals("Camus is great!  ".rightStrip().len(), 15);
        this.assertEquals("  Camus is great!".rightStrip().len(), 17);
        this.assertEquals("  Camus is great!  ".rightStrip().len(), 17);
    }
    
    testStringStrip() {
        this.assertEquals("Camus is great!  ".strip(), "Camus is great!");
        this.assertEquals("  Camus is great!".strip(), "Camus is great!");
        this.assertEquals("  Camus is great!  ".strip(), "Camus is great!");
        this.assertEquals("Camus is great!  ".strip().len(), 15);
        this.assertEquals("  Camus is great!".strip().len(), 15);
        this.assertEquals("  Camus is great!  ".strip().len(), 15);
    }
}

TestStringStrip().run();