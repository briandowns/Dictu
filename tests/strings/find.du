/**
 * find.du
 *
 * Testing the str.find() method
 *
 * .find() returns the index of a substring or -1 if not found
 */
from UnitTest import UnitTest;

class TestStringFind < UnitTest {
    testStringFind() {
        // Exists
        this.assertEquals("hello".find("hello"), 0);
        this.assertEquals("hello".find("l"), 2);
        this.assertEquals("hello".find("l", 2), 3);
        this.assertEquals("Camus is great! Camus is great!".find("Camus"), 0);
    }

    testStringFindSecond() {
        this.assertEquals("Camus is great! Camus is great!".find("Camus", 2), 16);
    }

    testStringFindThird() {
        this.assertEquals("Camus is great! Camus is great! Camus is great!".find("Camus", 3), 37);
    }

    testStringFindDoesntExist() {
        this.assertEquals("Camus is great!".find("hello"), -1);
        this.assertEquals("Camus is great!".find("l"), -1);
        this.assertEquals("Camus is great!".find("hello"), -1);
    }

    testStringFindDoesntExistSecond() {
        this.assertEquals("Camus is great!".find("Camus", 2), -1);
    }

    testStringFindDoesntExistThird() {
        this.assertEquals("Camus is great!Camus is great!".find("Camus", 3) , -1);
    }
}

TestStringFind().run();