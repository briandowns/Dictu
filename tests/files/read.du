/**
 * read.du
 *
 * Testing file reading with read()
 */
from UnitTest import UnitTest;

class TestFileReading < UnitTest {
    const EXPECTED = "Camus is great!\n" +
        "Camus is great!\n" +
        "Camus is great!\n" +
        "Camus is great!\n" +
        "Camus is great!\n" +
        "\n" +
        "\n" +
        "Camus is great!\n" +
        "Camus is great!\n" +
        "Camus is great!\n" +
        "Camus is great!\n" +
        "Camus is great!";

    testFileRead() {
        var contents;

        with("tests/files/read.txt", "r") {
            contents = file.read();
        }

        this.assertType(contents, "string");
        this.assertEquals(contents, TestFileReading.EXPECTED);
    }
}

TestFileReading().run();