import Path;
import System;

const srcFile = "src_file",
      dstFile = "dst_file";

def cleanup(tmpDir) {
    Path.listDir(tmpDir).forEach(def(f) => {
        System.remove(Path.join(tmpDir, f)).match(
            def(result) => result,
            def(error) => {
                print(error);
                System.exit(1);
            }
        );
    });

    System.rmdir(tmpDir).match(
        def(result) => result,
        def(error) => {
            print(error);
            System.exit(1);
        }
    );
}

